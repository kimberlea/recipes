<div class="profile-page container">

  <div class="header-space"></div>

  <%= render partial: "users/user_profile_header", locals: {users: @users} %>
  
  <div class="page-tabs row " style="border-top: 1px solid #ccc;">

    <div class="col-xs-6 page-tab <%= "page-tab-active" if @filter == "all" %>"  style="border-right: 1px solid #ccc;">
      <a href="?filter=all" class="<%= "active" if @filter == "all"%>;">
        <i class="fa fa-list"></i>
        My Dishes
      </a>
    </div>
    
    <div class="col-xs-6 page-tab <%= "page-tab-active" if @filter == "favorite" %>">
      <a href="?filter=favorite" class="<%= "active" if @filter == "favorite" %>">
        <i class="fa fa-heart"></i>
        Favorite Dishes
      </a>
    </div> 
  </div>

  <%= render partial: "dishes/tile_grid", locals: {dishes: @dishes} %>
</div>

<style>
.page-tabs {
  background-color: #f7f7f7;
}
.page-tabs .page-tab {
  text-align: center;
  padding: 10px 0px;
}

.page-tab a {
  color: #aaa;
  padding: 0px 10px;
}

.page-tabs .page-tab-active {
  color: #555;
  border-bottom: 2px solid #376ED2;
}

.page-tab-active i { 
  color: #376ED2;
}

.btn-success {
  margin: 10px;
  
}

.status-info {
  text-align: center;
}

.status-info-title {
  font: oblique;
}




</style>

