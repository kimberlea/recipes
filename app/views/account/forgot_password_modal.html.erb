<div class="panel-body">
  <div class="brand text-center" style="padding: 20px 0px 10px;">
    <div class="logo">
      <img src="/assets/logo_white.png" style="height: 40px;"/>
    </div>
  </div>
  <div class="intro text-center">
    <h3 style="margin-bottom: 10px"> Forgot Your Password?</h3>
    <div class="text-muted small" style="font-size: 12px;">Enter your email to reset your password.</div>
  </div>
  <div class="form">
    <div class="form-group">
      <input type="text" name="email" class="form-control input-lg" placeholder="Enter your email address." value=""/>
    </div>

    <div class="form-group">
      <button type="button" class="btn btn-success btn-lg btn-full" onclick="resetPassword();">
        <i class="fa fa-check"></i>
        Reset Password
      </button>
    </div>
  </div>

  <div class="form-group text-center">
    <a style="font-size: 14px;" href="#" onclick="closeModal('forgot_password');">Close</a>
  </div>

</div>

<script>
function resetPassword() {
  var email = $('input[name=email]').val();
  apiRequest({
    url: "/account/reset_password",
    method: "POST",
    data: {email: email},
    success: function(resp) {
      $.alert("We've emailed you instructions on resetting your password.");
      $('.form').hide();
    },
    error: function(resp) {
      $.alert(resp.error);
    }
  });
}
</script>
